<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>ru.pro.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/some</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CheckServlet</servlet-name>
        <servlet-class>ru.pro.CheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>

    <filter>
        <filter-name>HelloWorld</filter-name>
        <filter-class>ru.pro.filters.HelloWorldFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HelloWorld</filter-name>
        <url-pattern>/jsp/filter.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MessageFilter</filter-name>
        <filter-class>ru.pro.filters.MessageFilter</filter-class>
        <init-param>
            <param-name>message</param-name>
            <param-value>Hey, i'm message for you!</param-value>
        </init-param>
        <init-param>
            <param-name>word</param-name>
            <param-value>Fucking bullshit, Yeah there's more than one word here)))</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>MessageFilter</filter-name>
        <url-pattern>/jsp/filter2.jsp</url-pattern>
    </filter-mapping>
</web-app>